<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="62dp"
              android:background="@color/write">
    <ImageView
        android:id="@+id/iv_activity_bottle_item_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv_activity_bottle_item_img"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/tv_activity_bottle_item_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈尔滨"
            android:textColor="@color/balck"
            android:textSize="15sp"/>
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_activity_bottle_item_final_msg"
            android:layout_width="wrap_content"
            android:textColor="#ababab"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="不聊了"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_activity_bottle_item_time"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#ababab"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:text="2018-04-20 16:00:00"/>
    <TextView
        android:textColor="#5c7a9e"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/wdxx"
        android:id="@+id/wei_du_xiao_xi"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/tv_activity_bottle_item_time"
        />

</RelativeLayout>