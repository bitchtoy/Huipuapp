<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#EBEBEB"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#393A3E"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/uj"/>


        <TextView
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#322e2e"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="设置"
            android:textColor="@color/write"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/open_photo_pick"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/user_heard"
            android:layout_margin="8dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/hard"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#434242"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置我的漂流瓶头像"/>

    </LinearLayout>
    <TextView
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="为我的漂流瓶设置专用的头像"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#b97b7878"
        />

</LinearLayout>